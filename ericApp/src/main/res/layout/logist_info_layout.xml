<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/windowBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_margin="10dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logist Information"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"/>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

    <TextView
        android:id="@+id/hwName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="HW Name"
        android:background="@color/colorAccent"
        android:textColor="@color/textColorPrimary"/>

    <TextView
        android:id="@+id/serialNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hwName"
        android:padding="5dp"
        android:text="Serial Number"
        android:background="@color/textColorPrimary"
        android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/manufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serialNumber"
            android:padding="5dp"
            android:text="Manufacturer"
            android:background="@color/colorAccent"
            android:textColor="@color/textColorPrimary"/>

        <TextView
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manufacturer"
            android:padding="5dp"
            android:text="Model"
            android:background="@color/textColorPrimary"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/model"
            android:padding="5dp"
            android:text="Status"
            android:background="@color/colorAccent"
            android:textColor="@color/textColorPrimary"/>

        <TextView
            android:id="@+id/powerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:padding="5dp"
            android:text="Power Status"
            android:background="@color/textColorPrimary"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/budgetOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/powerStatus"
            android:padding="5dp"
            android:text="Budget Owner"
            android:background="@color/colorAccent"
            android:textColor="@color/textColorPrimary"/>

        <TextView
            android:id="@+id/servicer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/budgetOwner"
            android:padding="5dp"
            android:text="Servicer"
            android:background="@color/textColorPrimary"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/auditDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/servicer"
            android:padding="5dp"
            android:text="Audit Date"
            android:background="@color/colorAccent"
            android:textColor="@color/textColorPrimary"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lineItemsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/windowBackground">
        <TextView
            android:id="@+id/chassisNameBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line Items"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="18dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/textColorPrimary"
            android:background="@color/windowBackground"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chassisNameBtn"
            android:layout_toEndOf="@+id/chassisNameBtn"/>

    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/lineItemMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

    <TextView
        android:id="@+id/DetailsInfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PO"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/textColorPrimary"
        android:background="@color/windowBackground"
        />

    <View
        android:id="@+id/DetailsInfoView"
        android:layout_width="match_parent"
        android:layout_below="@+id/DetailsInfoTxt"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="25dp"
        android:layout_height="1dp"
        android:background="@color/textColorPrimary"
        />

    <TextView
        android:id="@+id/AttributesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DetailsInfoView"
        android:text="Material N#"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:padding="12dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/textColorPrimary"
        android:background="@color/windowBackground"
        />

        <View
            android:id="@+id/AttributeView"
            android:layout_width="match_parent"
            android:layout_below="@+id/AttributesTxt"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="25dp"
            android:layout_height="1dp"
            android:background="@color/textColorPrimary"
            />

        <TextView
            android:id="@+id/LogInfoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AttributeView"
            android:text="Disposition"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/textColorPrimary"
            android:background="@color/windowBackground"
            />

        <View
            android:id="@+id/logInfoView"
            android:layout_width="match_parent"
            android:layout_below="@+id/LogInfoTxt"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="25dp"
            android:layout_height="1dp"
            android:background="@color/textColorPrimary"
            />

        <TextView
            android:id="@+id/LoginstInfoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logInfoView"
            android:text="Description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/textColorPrimary"
            android:background="@color/windowBackground"
            />
    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>